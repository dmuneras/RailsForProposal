<%= semantic_form_for [@request_section.request, @request_section, @section_item] do |f| %>
  <%= f.inputs do %>
    <%= f.input :request_section_id, :as => :hidden %>
    <%= f.input :name, :label => t(:name) %>
    <%= f.input :value, :label => t(:value), :as => :select, :collection => (1..5) %>
    <%= f.input :required, :label => t(:required) %>
  <% end -%>
  <%= f.buttons do  %>
	<%= f.commit_button :label => "Agregar Item" %>
  <% end %>

<% end %>
