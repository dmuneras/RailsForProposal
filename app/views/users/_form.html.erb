<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label t(:first_name) %> :
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label t(:last_name) %> :
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label t(:username)%> :
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label t(:password) %> :
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label t(:password_confirmation) %> :
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label t(:email) %> :
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label t(:admin) %>
    <%= f.check_box :admin %>
  </p>
  <p><%= f.submit t(:create) %></p>
<% end %>
