<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application", "formtastic" , "calendar" %>
    <%= javascript_include_tag :defaults, 'jquery.tools.min.js' %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id= "cabezote"><h1>Rails for Proposal(No hubo imaginacion)</h1></div>
    <div id="user-nav">
        <% if current_user %>        
          <div><%= link_to "Informacion Usuario", user_path(current_user) %></div>
          <div><%= link_to t(:rfp), requests_path %></div>
          <% if current_user.admin %>
            <div> <%= link_to t(:users), users_path %></div>
	    <div><%= link_to t(:statistics), statistics_requests_path %></div>
	    <div> <%= link_to t(:new_request_type), new_request_type_path %></div>
          <% end -%>
           <div><%= link_to "Logout", logout_path %></div>
        <% else %>
           <div id = "login-link" ><%= link_to "Login", "#", :rel => "#login-div", :id => "login" %></div>
        <% end -%>
    </div>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
   
   <div id="login-div">
  <h2>Login</h2>
  <%= form_for UserSession.new do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
      </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p><%= f.submit 'Login' %></p>
  
  <p><%= link_to "Volver", root_path %></p>
  <% end %>
</div>



  </body>
</html>
